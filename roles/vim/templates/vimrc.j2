set noundofile
set bdir=~/.vimbackups
set dir=/tmp
set noerrorbells
set visualbell
set number
set hlsearch
set incsearch
set ignorecase
set smartcase
set scrolloff=3
set hidden
set autoindent
set history={{ vim_history | default(1000) }}
set ts={{ vim_tab_size | default(4) }}
set sw={{ vim_tab_size | default(4) }}
set noexpandtab

syntax on
colorscheme molokai
